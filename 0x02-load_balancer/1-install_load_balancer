#!/usr/bin/env bash
# Installs HAproxy on my server and configures it
sudo apt-get -y install --no-install-recommends software-properties-common
sudo add-apt-repository -y ppa:vbernat/haproxy-2.5
sudo apt-get -y install haproxy=2.5.\*
sudo echo -e "\nfrontend myfrontend\n
\tbind 0.0.0.0:80\n
\tdefault_backend myservers\n
\nbackend myservers\n
\tserver server1 127.0.0.1:8000\n
\tbalance roundrobin" | sudo tee -a /etc/haproxy/haproxy.cfg
sudo service haproxy restart
